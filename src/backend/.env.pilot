# ─── .env.pilot ─────────────────────────────────────────────
# Copy this to .env when deploying for a friendly-pilot test.
# Only the origins listed below will be accepted by the server.
# ────────────────────────────────────────────────────────────

NODE_ENV=production

# --- Database ---
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_receptionist

# --- Ports ---
PORT=3000

# --- Auth ---
SDK_AUTH_REQUIRED=true
SDK_CLIENT_ID=gomomo-web-client
SDK_CLIENT_SECRET=change-me-to-a-real-secret
SESSION_TOKEN_TTL_HOURS=4
ADMIN_API_KEY=change-me-to-a-real-admin-key

# --- Security ---
ENCRYPTION_KEY=change-me-to-a-real-32-byte-key!!

# --- CORS lockdown (strict by default – NODE_ENV=production) ---
# Alternatively, set PILOT_MODE=true to get strict CORS even with NODE_ENV=development.
PILOT_MODE=false
CORS_ORIGIN=https://pilot.gomomo-demo.com
CORS_ALLOWED_ORIGINS=https://pilot.gomomo-demo.com,https://admin.gomomo-demo.com
CORS_ALLOW_CREDENTIALS=true

# --- HTTPS enforcement (requires reverse proxy with TLS termination) ---
# The backend listens on plain HTTP (port 3000). Nginx/caddy terminates
# TLS and forwards with X-Forwarded-Proto: https. The backend then
# rejects any request that wasn't proxied over HTTPS.
REQUIRE_HTTPS=true

# --- LLM ---
OPENAI_API_KEY=sk-... 
OPENAI_MODEL=gpt-4o-mini

# --- Twilio (optional – leave blank to use SMS simulator) ---
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# --- Google Calendar (optional) ---
GOOGLE_CLIENT_ID=<your-google-client-id>.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=<your-google-client-secret>
GOOGLE_REDIRECT_URI=http://localhost:3000/api/oauth/google/callback

# --- Autonomy ---
AUTONOMY_ENABLED=true

# --- Demo ---
DEMO_FULL=false
