# ============================================================
# AI Receptionist — Pilot Environment Template
# ============================================================
# Copy to .env and fill in ALL required values before starting.
#
# Generate secrets:
#   openssl rand -base64 32    → 44-char base64 string (for 32-byte keys)
#   openssl rand -base64 24    → 32-char base64 string (for admin key)
#
# NEVER commit .env to version control!
# ============================================================

# ── Server ──────────────────────────────────────────────────
PORT=3000
HOST=0.0.0.0
NODE_ENV=production
LOG_LEVEL=info

# ── Database ────────────────────────────────────────────────
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/receptionist

# ── OpenAI ──────────────────────────────────────────────────
OPENAI_API_KEY=sk-REPLACE_ME
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o

# ── Secrets (REQUIRED — generate unique values!) ────────────
# Used for: HMAC signing (session tokens, handoff tokens),
# AES-256-GCM encryption of OAuth tokens at rest.
# Minimum 32 characters. Generate: openssl rand -base64 32
ENCRYPTION_KEY=REPLACE_ME_WITH_openssl_rand_-base64_32

# Used for: HMAC-SHA256 signing of client session tokens.
# Minimum 32 characters. Generate: openssl rand -base64 32
SESSION_TOKEN_SECRET=REPLACE_ME_WITH_openssl_rand_-base64_32

# Used for: Authenticating admin/operator API requests.
# Minimum 16 characters. Generate: openssl rand -base64 24
ADMIN_API_KEY=REPLACE_ME_WITH_openssl_rand_-base64_24

# ── Auth ────────────────────────────────────────────────────
SDK_AUTH_REQUIRED=true

# ── CORS (set to your frontend domain) ─────────────────────
CORS_ORIGIN=https://your-domain.com

# ── Google OAuth (required for calendar integration) ────────
GOOGLE_CLIENT_ID=REPLACE_ME
GOOGLE_CLIENT_SECRET=REPLACE_ME
GOOGLE_REDIRECT_URI=https://your-domain.com/api/oauth/google/callback

# ── Calendar ────────────────────────────────────────────────
CALENDAR_MODE=real
CALENDAR_SYNC_REQUIRED=false
CALENDAR_READ_REQUIRED=true
DEMO_AVAILABILITY=false

# ── Twilio (required for SMS) ──────────────────────────────
TWILIO_ACCOUNT_SID=REPLACE_ME
TWILIO_AUTH_TOKEN=REPLACE_ME
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX
TWILIO_WEBHOOK_BASE_URL=https://your-domain.com

# ── Voice ───────────────────────────────────────────────────
VOICE_ENABLED=false

# ── SMS ─────────────────────────────────────────────────────
SMS_HANDOFF_ENABLED=true
SMS_HANDOFF_WEB_URL=https://your-domain.com
SMS_INBOUND_ENABLED=true

# ── Features ────────────────────────────────────────────────
EXCEL_ENABLED=false
AUTONOMY_ENABLED=false
